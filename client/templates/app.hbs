<!-- set up borders around the application -->
<div id="app-border-top" class="windowBorder"></div><div id="app-border-bottom" class="windowBorder"></div>
<div id="app-border-left" class="windowBorder"></div><div id="app-border-right" class="windowBorder"></div>

<!-- topLevelContainer holds the main application -->
<div id="navigationContainer" class="container-fluid">
  <!-- Navigation -->
  <nav id="navigationHolder" class="navbar navbar-inverse navbar-fixed-top disallowHighlighting" role="navigation">
    <div class="container-fluid">

      {{!-- 
        ------------------------------------------------------------------------
        Window title bar
        ------------------------------------------------------------------------
      --}}
      <div class="row windowBar">

        <div class="col-xs-4 windowBarLeftCol">
          {{#if platform.mac}}
            {{!-- NW_controls: System MAC --}}
            <form class="navbar-left">
              <ul class="nav nav-pills navbar-nav">
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_exit dismissLinkAction"><i class="fa fa-times-circle"></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_minimize dismissLinkAction"><i class="fa fa-minus-circle"></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_maximize dismissLinkAction"><i class="fa fa-plus-circle"></i></a></li>
              </ul>
            </form>
          {{else}}
            {{!-- NW_controls: WIN or LINUX extra top controls --}}
            <form class="navbar-left">
              <ul class="nav nav-pills navbar-nav">
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_fullscreen dismissLinkAction" data-windowed-text="<i class='fa fa-expand'></i>" data-fullscreen-text="<i class='fa fa-compress'></i>"><i class="fa fa-expand"></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_welcome dismissLinkAction"><i class='fa fa-info-circle'></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls items_link_external hidden updateAvailable"></a></li>
              </ul>
            </form>
          {{/if}}
        </div>

        <div class="col-xs-4 windowBarMiddleCol">
          {{!-- Titlebar --}}
          {{#if debugmode}}
            <p class="windowtitle text-center disabled"><img src="assets/SJ_logo_window.png" width="15px" height="15px" /> {{name}} v{{version}} (debug)</p>
          {{else}}
            <p class="windowtitle text-center disabled"><img src="assets/SJ_logo_window.png" width="15px" height="15px" /> {{name}} v{{version}}</p>
          {{/if}}
        </div>

        <div class="col-xs-4 windowBarRightCol">
          {{#if platform.mac}}
            {{!-- NW_controls: MAC extra top controls --}}
            <form class="navbar-right">
              <ul class="nav nav-pills navbar-nav">
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls items_link_external hidden updateAvailable"></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_welcome dismissLinkAction"><i class='fa fa-info-circle'></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_fullscreen dismissLinkAction" data-windowed-text="<i class='fa fa-expand'></i>" data-fullscreen-text="<i class='fa fa-compress'></i>"><i class="fa fa-expand"></i></a></li>
              </ul>
            </form>
          {{else}}
            {{!-- NW_controls: System WIN or LINUX --}}
            <form class="navbar-right">
              <ul class="nav nav-pills navbar-nav">
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_minimize dismissLinkAction"><i class="fa fa-minus-circle"></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_maximize dismissLinkAction"><i class="fa fa-plus-circle"></i></a></li>
                <li><a href="" class="defaultCursorNoDrag nwapp_menu_controls nav_exit dismissLinkAction"><i class="fa fa-times-circle"></i></a></li>
              </ul>
            </form>
          {{/if}}
        </div>

      </div>
      
      {{!-- 
        ------------------------------------------------------------------------
        Navigation bar
        ------------------------------------------------------------------------
      --}}

      <div class="row">

        {{!-- Refetch --}}
        <div class="col-xs-1">
          <form class="navbar-left row mainNavLeftActions">
            <ul class="nav nav-pills navbar-nav">
              <li class="col-xs-12 text-center mainNavLi"><a href="" id="refetch_button" data-loading-text="<i class='fa fa-refresh fa-2x fa-spin'></i>" class="appCycleDependent dismissLinkAction nav_blue defaultCursorNoDrag"><i class="fa fa-refresh fa-2x"></i></a></li>
            </ul>
          </form>
        </div>

        {{!-- Main Navigation Tabs --}}
        {{!-- <div class="col-xs-11">
          <div class="row"> --}}
            <ul class="nav nav-pills navbar-nav" id="appNavigationTab">
              <li class="col-xs-5 text-center mainNavLi"><a href="#all_tab" data-toggle="tab" class="defaultCursorNoDrag"><i class="fa fa-search fa-2x"></i></a></li>
              <li class="col-xs-5 text-center mainNavLi active"><a href="#favourites_tab" data-toggle="tab" class="defaultCursorNoDrag"><i class='fa fa-star fa-2x'></i></a></li>
              <li class="col-xs-1 text-center mainNavLi"><a href="#settings_tab" data-toggle="tab" class="defaultCursorNoDrag"><i class="fa fa-cog fa-2x"></i></a></li>
            </ul>
        {{!--   </div>

        </div> --}}

      </div>

    </div>
  </nav>
</div>

{{!-- 
  ------------------------------------------------------------------------------
  Error Messages (through template alertbox)
  ------------------------------------------------------------------------------
--}}
<div id="errorContainer" class="errorbox-content"></div>


{{!-- 
  ------------------------------------------------------------------------------
  Modal Messages (through template modal)
  ------------------------------------------------------------------------------
--}}

<div id="modalContainer"></div>

{{!-- 
  ------------------------------------------------------------------------------
  Tab Content
  ------------------------------------------------------------------------------
--}}
<div id="mainContentContainer" class="tab-content">
  <div id="all_tab" class="tab-pane fade">
    <div class="container-fluid">
      {{!-- Search + add to favourites --}}
      <div id="all_searchbox" class="input-group input-group-lg subActionBar" data-spy="affix" data-offset-top="0">
        <span class="input-group-addon disallowHighlighting"><i class='fa fa-search'></i></span>
        <input id="search_input" type="text" class="form-control" placeholder="search releases e.g. 'title format release-group language'">
        <span class="input-group-btn disallowHighlighting">
          <button type="button" id="addkeyword_button" class="btn btn-primary disabled defaultCursorNoDrag"><i class='fa fa-star'></i></button>
        </span>
      </div>
      {{!-- TEMPLATE --}}
      <div id="all_items" class="itemsholder">template items (all)</div>
    </div>
  </div>
  <div id="favourites_tab" class="tab-pane fade in active">
    <div class="container-fluid">
      {{!-- TEMPLATE --}}
      <div id="favourite_keywords" class="subActionBar" data-spy="affix" data-offset-top="0">template favourites</div>
      <div id="favourite_items" class="itemsholder">template items (favourites)</div>
    </div>
  </div>
  <div id="settings_tab" class="tab-pane fade">
    <div class="container-fluid">
      {{!-- TEMPLATE --}}
      <div id="settings">template settings</div>
    </div>
  </div>
</div>