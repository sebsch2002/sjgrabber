{{#if items}}
<table class="table table-hover table-condensed">
  <thead>
    <td>Date</td>
    <td>Title</td>
  </thead>
  <tbody>
    {{! output each item}}
    {{#each items}}
    <tr>
      <td>{{date}}</td>
      {{#if link}}
        <td><a href="{{link}}">{{title}}</a></td>
      {{else}}
        <td>{{title}}</td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
  <h5><i class="fa fa-frown-o"></i> no content <i class="fa fa-frown-o"></i></h5>
{{/if}}